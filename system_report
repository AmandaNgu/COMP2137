#!/bin/bash
HOSTNAME=$(hostname)
OS=$(cat /etc/os-release | grep PRETTY_NAME | cut -d= -f2 | tr -d '"')
UPTIME=$(uptime -p)
CPU=$(lscpu | grep "Model name" | awk -F ':' '{print $2}' | sed 's/^[ \t]*//')
RAM=$(free -h | grep Mem | awk '{print $2}')
DISKS=$(lsblk -d -o NAME,SIZE,MODEL | grep -v "NAME")
VIDEO=$(lspci | grep VGA | awk -F ': ' '{print $3}')
FQDN=$(hostname -f)
IP_ADDRESS=$(hostname -I | awk '{print $1}')
GATEWAY_IP=$(ip route | grep default | awk '{print $3}')
DNS_SERVER=$(systemd-resolve --status | grep 'DNS Servers' | head -1 | awk '{print $3}')
USERS=$(who | awk '{print $1}' | paste -sd ",")
DISK_SPACE=$(df -h | grep '^/dev')
PROCESS_COUNT=$(ps aux | wc -l)
LOAD_AVG=$(uptime | awk -F 'load average:' '{print $2}' | sed 's/ //g')
MEMORY_ALLOCATION=$(free -h | grep Mem | awk '{print $3 "/" $2}')
LISTENING_PORTS=$(ss -tuln | grep LISTEN | awk '{print $5}' | awk -F':' '{print $2}' | paste -sd ",")
echo ""
echo "System Report generated by $USER, $(date)"
echo ""
echo "System Information"
echo "------------------"
echo "Hostname: $HOSTNAME"
echo "OS: $OS"
echo "Uptime: $UPTIME"
echo ""
echo "Hardware Information"
echo "--------------------"
echo "CPU: $CPU"
echo "RAM: $RAM"
echo "Disk(s):"
echo "$DISKS"
echo "Video: $VIDEO"
echo ""
echo "Network Information"
echo "-------------------"
echo "FQDN: $FQDN"
echo "Host Address: $IP_ADDRESS"
echo "Gateway IP: $GATEWAY_IP"
echo "DNS Server: $DNS_SERVER"
echo ""
echo "System Status"
echo "-------------"
echo "Users Logged In: $USERS"
echo "Disk Space:"
echo "$DISK_SPACE"
echo "Process Count: $PROCESS_COUNT"
echo "Load Averages: $LOAD_AVG"
echo "Memory Allocation: $MEMORY_ALLOCATION"
echo "Listening Network Ports: $LISTENING_PORTS"
echo ""

